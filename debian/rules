#!/usr/bin/make -f

%:
	dh $@ --with-python2

override_dh_auto_build: build-python2.7
	dh_auto_build

override_dh_auto_install: install-python2.7
	dh_auto_install

build-python%:
	cd python && python$* setup.py build

install-python%:
	cd python && python$* setup.py install --root=${CURDIR}/debian/tmp \
					       --install-layout=deb
